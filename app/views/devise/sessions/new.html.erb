<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header text-center">
          <h2>Log in</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
            <div class="form-floating mb-3">
              <%= f.input :email, 
                          required: false, 
                          autofocus: true, 
                          input_html: { 
                            class: "form-control", 
                            autocomplete: "email", 
                            placeholder: "Email address" 
                          },
                          label_html: { class: "form-label", for: "email" } %>
            </div>
            <div class="form-floating mb-3">
              <%= f.input :password, 
                          required: false, 
                          input_html: { 
                            class: "form-control", 
                            autocomplete: "current-password", 
                            placeholder: "Password" 
                          },
                          label_html: { class: "form-label", for: "password" } %>
            </div>
            <div class="form-check mb-3">
              <%= f.input :remember_me, 
                          as: :boolean, 
                          input_html: { 
                            class: "form-check-input" 
                          }, 
                          label: "Remember me", 
                          label_html: { class: "form-check-label" } if devise_mapping.rememberable? %>
            </div>
            <div class="d-grid">
              <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
