<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="row justify-content-center w-100">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header text-center">
          <h2>Bienvenido</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
            <div class="form-floating mb-1">
              <%= f.input :email, 
                          required: false, 
                          autofocus: true, 
                          input_html: { 
                            class: "form-control", 
                            autocomplete: "email", 
                            placeholder: "Correo electrónico" 
                          },
                          label_html: { class: "form-label", for: "email" } %>
            </div>
            <div class="form-floating mb-1">
              <%= f.input :password, 
                          required: false, 
                          input_html: { 
                            class: "form-control", 
                            autocomplete: "current-password", 
                            placeholder: "Contraseña" 
                          },
                          label_html: { class: "form-label", for: "password" } %>
            </div>
            <div class="form-check mb-1">
              <%= f.input :remember_me, 
                          as: :boolean, 
                          input_html: { 
                            class: "form-check-input" 
                          }, 
                          label: "Recordar usuario", 
                          label_html: { class: "form-check-label" } if devise_mapping.rememberable? %>
            </div>
            <div class="d-grid">
              <%= f.button :submit, "Iniciar", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-left">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
